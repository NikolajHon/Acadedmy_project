<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                                     http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">

    <package>sk.posam.fsa.discussion</package>

    <entity class="Lesson" access="PROPERTY">
        <table name="lesson"/>
        <attributes>
            <id name="id">
                <column name="id"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="title">
                <column name="title" nullable="false" length="255"/>
            </basic>
            <basic name="content">
                <column name="content" length="1000"/>
            </basic>
            <many-to-one name="course">
                <join-column name="course_id" nullable="false"/>
            </many-to-one>
        </attributes>
    </entity>

    <entity class="Course" access="PROPERTY">
        <table name="course" />
        <attributes>
            <id name="id">
                <column name="id"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="name">
                <column name="name" nullable="false" length="255"/>
            </basic>
            <basic name="description">
                <column name="description" length="1000"/>
            </basic>
            <one-to-many name="lessons" mapped-by="course" fetch="EAGER" />
        </attributes>
    </entity>


</entity-mappings>
